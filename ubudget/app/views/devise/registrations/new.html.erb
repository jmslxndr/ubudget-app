<div class="container">

    <h2 id="signup">Sign Up!</h2>
    <hr class="short_line">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, id: 'field_area' %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", id: 'field_area' %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", id: 'field_area' %>
      </div>

      <div class="actions">
        <%= f.submit "Sign Up!" %>
      </div>
    <% end %>

    <div class="rendered_links">
      <p>Already have an account? </p>
      <%= render "devise/shared/links" %>
    </div>
</div>