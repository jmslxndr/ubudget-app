<!DOCTYPE html>
<html>
<head>
  <title>Ubudget</title>
	  <!-- Latest compiled and minified CSS -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
	<!-- Optional theme -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  	<!-- Latest compiled and minified JavaScript -->
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
	<link href='https://fonts.googleapis.com/css?family=Comfortaa' rel='stylesheet' type='text/css'>
  <%= csrf_meta_tags %>
</head>
<body>

	<header>
		<div class="container">
			<div class="col-md-6">
				<% if current_user %>
					<h1 class="animated bounceInDown" id="logo"><%= link_to 'uBudget', dashboard_path %> </h1>
				<% else %>
					<h1 class="animated bounceInDown" id="logo"><%= link_to 'uBudget', home_path %> </h1>
				<% end %>
			</div>
			<div class="col-md-6">
				<nav>
					<% if current_user %>					
						<li><%= link_to 'Log Out', destroy_user_session_path, method: :delete %></li>
						<li><%= link_to 'Delete Account', delete_account_path(current_user), method: :delete %></li>
					<% end %>
				</nav>
			</div>	
	  </div>
	</header>

	<%= yield %>
	<footer>
		<div class="container">
			<div class="col-md-6">
				<h2>Company</h2>
				<ul>
					<li><%= link_to 'Terms of Use', terms_path %></li>
					<li><%= link_to 'Privacy Policy', privacy_path %></li>
				</ul>
			</div>
			<div class="col-md-6">
				<h2>Contact Us</h2>

			</div>
	</div>
	</footer>
</body>
</html>
