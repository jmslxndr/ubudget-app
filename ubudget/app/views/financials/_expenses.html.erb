<div class="container" id="expense_form">
	
	<h1 id="h1-center">Expenses</h1>
	
	<div class="col-md-2">
		 <%= form_for(@financial) do |f| %>
		 	<p>
		 		<%= f.label :rent, "Monthly Rent" %><br>
		 		<%= f.text_field :rent, value: @financial.rent || 0  %>
		 	</p>
		 	<p>
		 		<%= f.label :home_maintenance, "Home Maintenance" %><br>
		 		<%= f.text_field :home_maintenance, value: @financial.home_maintenance || 0 %>
		 	</p>
		 	<p>
		 		<%= f.label :electricity, "Electricity" %><br>
		 		<%= f.text_field :electricity, value: @financial.electricity || 0  %>
		 	</p>
		 	<p>
		 		<%= f.label :water, "Water" %><br>
		 		<%= f.text_field :water, value: @financial.water || 0  %>
		 	</p>
		 	<p>
		 		<%= f.label :gas_oil, "Gas/Oil" %><br>
		 		<%= f.text_field :gas_oil, value: @financial.gas_oil || 0   %>
		 	</p>
		</div> 
		
		<div class="col-md-2">	
		 	<p>
		 		<%= f.label :phone, "Phone" %><br>
		 		<%= f.text_field :phone, value: @financial.phone || 0   %>
		 	</p>
		 	<p>
		 		<%= f.label :food, "Food" %><br>
		 		<%= f.text_field :food, value: @financial.food || 0  %>
		 	</p>
		 	<p>
		 		<%= f.label :insurance, "Health Insurance" %><br>
		 		<%= f.text_field :insurance, value: @financial.insurance || 0   %>
		 	</p>
		 	<p>
		 		<%= f.label :car_payment, "Car Payment" %><br>
		 		<%= f.text_field :car_payment, value: @financial.car_payment || 0   %>
		 	</p>
		 	<p>
		 		<%= f.label :gas, "Vehicle Fuel" %><br>
		 		<%= f.text_field :gas, value: @financial.gas || 0   %>
		 	</p>
		 	<br>
		 	<p><%= submit_tag 'Submit' %></p>
		</div> 	
		
		<div class="col-md-2" id="column-before-graph">
		 	<p>
		 		<%= f.label :car_insurance, "Car Insurance" %><br>
		 		<%= f.text_field :car_insurance, value: @financial.car_insurance || 0   %>
		 	</p>
		 	<p>
		 		<%= f.label :credit_cards, "Credit Cards" %><br>
		 		<%= f.text_field :credit_cards, value: @financial.credit_cards || 0   %>
		 	</p>
		 	<p>
		 		<%= f.label :student_loan, "Student Loan" %><br>
		 		<%= f.text_field :student_loan, value: @financial.student_loan || 0  %>
		 	</p>
		 	 	<p>
		 		<%= f.label :other_loans, "Other Loans" %><br>
		 		<%= f.text_field :other_loans, value: @financial.other_loans || 0   %>
		 	</p>
		 	 	<p>
		 		<%= f.label :misc_expenses, "Misc. Expenses" %>
		 		<%= f.text_field :misc_expenses, value: @financial.misc_expenses || 0  %>
		 	</p>
		<% end %>
		<br>
		<br>
		<br>
		</div>	
		
		<div class="col-md-6">
			<!-- THIS IS WHERE THE GRAPH GOES -->
